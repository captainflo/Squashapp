<h1 class="title_dash">Dashboard</h1>

<h2>Users</h2>
<% @users.each do |user| %>
<div class="row placeholders">
  <div class="col-xs-6 col-sm-3 placeholder">
    <div class="img-fluid">
    <%= image_tag(user.avatar.medium.url) if user.avatar? %>
    </div>
    <h4><%= user.firstname %> <%= user.lastname %></h4>
    <span class="text-muted"><a href="/users/<%= user.id%>">Edit</a></span>
</div>
<% end %>
<%= paginate @users %>
  </div>
<%= link_to 'New User', new_user_path, class:"button" %>

<div class="table-responsive">
  <h2>List Customers</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Picture</th>
        <th>Id</th>
        <th>firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Address</th>
        <th>Tel</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag(customer.avatar.thumb.url) if customer.avatar? %></td>
        <td><%= customer.id %></td>
        <td><%= customer.firstname %></td>
        <td><%= customer.lastname %></td>
        <td><%= customer.email %></td>
        <td><%= customer.address %></td>
        <td><%= customer.tel %></td>
        <td><a href="/customers/<%= customer.id%>">Edit</a></td>
      </tr>
      <% end %>
        <%= paginate @customers %>
    </tbody>
  </table>
</div>

<%= link_to 'New Customer', new_customer_path, class:"button" %>

<div class="table-responsive">
  <h2>List Categories</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Price</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.code %></td>
        <td><%= category.price.to_f / 100 %>$</td>
        <td><a href="/categories/<%= category.id%>">Edit</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Category', new_category_path, class:"button" %>
