<h1>New Customer</h1>

<%= form_for @customer do |f| %>

  <%= f.label :firstname %>
  <%= f.text_field :firstname %>
  <br>
  <%= f.label :lastname %>
  <%= f.text_field :lastname %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :tel %>
  <%= f.telephone_field :tel %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.submit %>
<% end %>
