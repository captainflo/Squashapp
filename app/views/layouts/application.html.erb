<!DOCTYPE html>
<html>
  <head>
    <title>Squashapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: 'layouts/navbar' %>

    <div class="container-fluid">
      <div class="row">
        <% if controller_name != "page" && controller_name != 'sessions' && controller_name != 'registrations' && controller_name != 'passwords' %>
          <%= render partial: 'layouts/sidebar' %>
        <% end %>

        <% if controller_name != "page" && controller_name != 'sessions' && controller_name != 'registrations' %>
          <div class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 main">
            <%= render partial: 'layouts/alerts' %>
            <%= yield %>
          </div>
        <% else %>
          <div class="col-sm-12 offset-sm-12 col-md-12 main">
            <%= render partial: 'layouts/alerts' %>
            <%= yield %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
