<!DOCTYPE html>
<html>
  <head>
    <title>Squashapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if user_signed_in? %>
    <%= link_to "sign_out", destroy_user_session_path, method: :delete %><br>
    <%= link_to "Dashboard", dashboard_path %><br>
  <% else %>
    <%= link_to "sign_in", new_user_session_path %><br>
    <%= link_to "sign_up", new_user_registration_path %><br>
  <% end %>

  <%= link_to "Home", page_home_path %><br>
  <%= link_to "About", page_about_path %><br>
  <%= link_to "Contact", page_contact_path %><br>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
