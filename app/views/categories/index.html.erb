<div class="table-responsive">
  <h2>List Categories</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Price</th>
        <th>Entry</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.code %></td>
        <td><%= category.price.to_f / 100 %>$</td>
        <td><%= category.nb_card_entries %></td>
        <td><a href="/categories/<%= category.id%>">Edit</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
